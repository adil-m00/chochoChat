<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randomchat">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.RandomChat"
        android:usesCleartextTraffic="true">
        <activity android:name="com.chochoChat.Settings"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.chochoChat.PrivacyPolicy"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.TermsAndConditions"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.SubscriptionPlan"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.NeedHelp"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.EditProfile"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.InboxChat"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.SearchResult"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.ChooserSearch"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.CompleteProfile"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.NewPassword"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.VerificationCode"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.ForgotPassword"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.LoginScreen"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.SignUpScreen"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.LoginSignup"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.chochoChat.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>