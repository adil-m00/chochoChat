<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context="com.chochoChat.SubscriptionPlan">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="16dp"
        android:src="@drawable/subscription_plan_text"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/back"
        android:id="@+id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="14dp"
        android:src="@drawable/subscribe_plans_icon"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/back"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_125sdp"
        android:layout_below="@+id/imageView24"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:id="@+id/layoutPlan"
        android:background="@drawable/bg_rect"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/textPlan"
            android:src="@drawable/free_plan_text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPlan"
            android:scaleType="fitStart"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:src="@drawable/free_plan_image"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/full_bg"
        android:layout_below="@+id/layoutPlan">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBSCRIPTION PLANS"
            android:gravity="center"
            android:id="@+id/subscription"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_125sdp"
            android:background="@drawable/blue1"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:id="@+id/advanceLayout"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_below="@+id/subscription">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:scaleType="fitStart"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:id="@+id/texts"
                android:src="@drawable/advance_filter_plan"/>

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:id="@+id/subBtn"
                android:src="@drawable/sub_btn"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_90sdp"
                android:scaleType="fitStart"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/texts"
                android:src="@drawable/adv_filter"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/blue2"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_below="@+id/advanceLayout">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:scaleType="fitStart"
                android:id="@+id/textSearch"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:src="@drawable/premium_plan"/>

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:id="@+id/premium"
                android:src="@drawable/sub_btn"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_65sdp"
                android:scaleType="fitStart"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_below="@+id/textSearch"
                android:src="@drawable/premium"/>

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>