<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_bg"
    tools:context=".Fragment.GroupChatFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/chat_text"
        android:text="GROUP CHAT"
        android:gravity="center"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/chatText"
        android:layout_marginTop="@dimen/_20sdp"/>


    <ImageView
        android:id="@+id/addBtns"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:src="@drawable/plus_btnns"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/logout"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:src="@drawable/logout"
        app:tint="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_rect"
        android:layout_below="@+id/chatText">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_margin="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:id="@+id/searchHere"
            android:background="@drawable/tf"
            android:hint="Search group"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/searchHere"
            android:id="@+id/recyclerView"
            android:layout_margin="@dimen/_10sdp"/>


    </RelativeLayout>




</RelativeLayout>