<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context="com.chochoChat.LoginSignup">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app_logo" />

            <TextView
                android:id="@+id/random_text"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:src="@drawable/random_chat_app"
                android:text="Chat App"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chat_icon"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_below="@+id/random_text"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_20sdp"
                android:src="@drawable/chat_icon"
                app:tint="@color/purple_700" />


            <ImageView
                android:id="@+id/purple"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_5sdp"
                android:layout_below="@+id/chat_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/purple_line" />

            <ImageView
                android:id="@+id/dote1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_5sdp"
                android:layout_below="@id/chat_icon"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toRightOf="@+id/purple"
                android:src="@drawable/white_dot" />

            <ImageView
                android:id="@+id/dote2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_5sdp"
                android:layout_below="@id/chat_icon"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toRightOf="@+id/dote1"
                android:src="@drawable/white_dot" />


            <ImageView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/dote2"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/signup_btn" />


            <ImageView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/signUp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/login_btn" />
        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>