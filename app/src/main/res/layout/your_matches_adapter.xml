<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/chats_list_bg"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="@dimen/_70sdp">



    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:id="@+id/image1"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/avatar8"/>

    <ImageView
        android:layout_width="@dimen/_11sdp"
        android:layout_height="@dimen/_11sdp"
        android:src="@drawable/equals"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_centerVertical="true"
        android:id="@+id/equals"
        android:layout_toRightOf="@+id/image1"/>
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/avatar6"
        android:id="@+id/image2"
        android:layout_toRightOf="@+id/equals"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/removeLayout"
        android:id="@+id/linear1"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_8sdp"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/chat_icon_match_list"
            android:id="@+id/chatIcon"
            android:layout_toRightOf="@+id/equals"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/removeLayout"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/remove_icon"
            android:id="@+id/removeIcon"
            android:layout_toRightOf="@+id/equals"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Match"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>